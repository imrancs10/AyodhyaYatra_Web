@using AyodhyaYatra_Web.Models;
@using System.Linq;

@{
    ViewBag.Title = "NewsAndEvents";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var newsUpdateList = ViewData["newsUpdateList"] as List<NewsUpdateModel>;
}

<section>
    <div class="gap black-layer opc8 inner-banner">
        <div class="fixed-bg set-imagebloc" style="background-image: url(../wp-content/uploads/2023/11/tq-feat-img2-2.jpg);"></div>
        <div class="container">
            <div class="pg-tp-wrp text-center" style="padding-top:50px">
                <div class="pg-tp-inr">
                    <h1 itemprop="headline">News And Events</h1>
                    <ol class="breadcrumb brd-rd30">
                        <li class="breadcrumb"><a href="/Home/Index">Home /</a> </li>
                        <li class="breadcrumb active">News And Events</li>
                    </ol>
                </div>
            </div><!-- Page Top Wrap -->
        </div>
    </div>
</section>

<!-- Page Content Starts -->
<div id="main" class="page-content">
    <div class="container">
        <div class="row">
            <div id="post-103" class="post-103 page type-page status-publish hentry">
                <div data-elementor-type="wp-page" data-elementor-id="103" class="elementor elementor-103">
                    <section class="elementor-section elementor-top-section elementor-element elementor-element-bcfca24 elementor-section-stretched elementor-section-full_width elementor-section-height-default elementor-section-height-default" data-id="bcfca24" data-element_type="section" data-settings="{&quot;stretch_section&quot;:&quot;section-stretched&quot;}">
                        <div class="elementor-container elementor-column-gap-no">
                            <div class="elementor-column elementor-col-100 elementor-top-column elementor-element elementor-element-a8ca888" data-id="a8ca888" data-element_type="column">
                                <div class="elementor-widget-wrap elementor-element-populated">
                                    <div class="elementor-element elementor-element-26a22e6 elementor-widget elementor-widget-campaign_grid" data-id="26a22e6" data-element_type="widget" data-widget_type="campaign_grid.default">
                                        <div class="elementor-widget-container">


                                            <section>
                                                <div class="gap excerpt_style">
                                                    <div class="container">
                                                        <div class="cause-sec remove-ext5">
                                                            <div class="row">

                                                                @foreach (var news in newsUpdateList)
                                                                {
                                                                    <div class="col-md-4 col-sm-6 col-lg-4">
                                                                        <div class="cause-bx brd-rd5 wow noanim" data-wow-duration="1s">
                                                                            <div class="cause-thmb">
                                                                                @if (news.Images != null && news.Images.Count > 0)
                                                                                {
                                                                                    <a href="javascript:void(0);" itemprop="url">
                                                                                        <img fetchpriority="high" decoding="async" width="370" height="285" class="attachment-370x285 size-370x285 wp-post-image"
                                                                                             src="@(news.Images[0]!=null? "https://api.ayodhya-dham.in/"+news.Images[0].FilePath:"")"
                                                                                             alt="test" loading="lazy">
                                                                                    </a>
                                                                                }
                                                                                else
                                                                                {
                                                                                    <a href="javascript:void(0);" itemprop="url">
                                                                                        <img fetchpriority="high" decoding="async" width="370" height="285" class="attachment-370x285 size-370x285 wp-post-image"
                                                                                             src="../Content/wp-content/uploads/temple.jpg"
                                                                                             alt="test" loading="lazy">
                                                                                    </a>
                                                                                }
                                                                            </div>
                                                                            <div class="cause-inf">
                                                                                <h5 itemprop="headline"><a href="/Home/NewsEventsDetailPage" itemprop="url">@news.NewsUpdateTypeName</a></h5>
                                                                                <ul class="pst-mta">
                                                                                    <li><i class="far fa-calendar-alt theme-clr"></i><span class="amount time-left days-left">@news.EventDate.Value.ToString("dd/MMM/yyyy")</span></li>
                                                                                    <li><i class="far fa-user theme-clr"></i> @news.EnTitle</li>
                                                                                </ul>
                                                                                <p itemprop="description">@news.EnDescription</p>
                                                                                <div class="prg-wrp">
                                                                                    <a class="tq-theme-btn tq-bg-theme rounded-pill" href="/Home/NewsEventsDetailPage?eventId=@news.Id">
                                                                                        Read More
                                                                                    </a>
                                                                                </div>
                                                                            </div>
                                                                        </div>
                                                                    </div>
                                                                }


                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            </section>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </section>

                </div>
            </div><!-- #post-## -->

        </div>
    </div>
</div>	